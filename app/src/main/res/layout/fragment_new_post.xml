<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragment_new_post">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/postContentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="¿En que estas pensando?"
            android:textSize="18sp"
            android:lines="6"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text"
            android:padding="8dp">
            <requestFocus />
        </EditText>

        <Space android:layout_width="match_parent" android:layout_height="12dp" />

        <!-- Botones multimedia - fila 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/imagen_galeria"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/image" />

            <Button
                android:id="@+id/video_galeria"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/movie" />

            <Button
                android:id="@+id/audio_galeria"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/audio" />
        </LinearLayout>

        <!-- Botones multimedia - fila 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/camara_fotos"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/camera" />

            <Button
                android:id="@+id/camara_video"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/video" />

            <Button
                android:id="@+id/grabar_audio"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="8dp"
                android:background="@drawable/mic" />
        </LinearLayout>

        <!-- Previsualización -->
        <ImageView
            android:id="@+id/previsualizacion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop" />

        <!-- Hashtags -->
        <EditText
            android:id="@+id/hashtagsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Hashtags"
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:padding="8dp" />

        <!-- Publicar -->
        <Button
            android:id="@+id/publishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicar"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
